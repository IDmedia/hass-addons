{
  "name": "Hass Backup",
  "version": "0.0.8",
  "slug": "hass_backup",
  "description": "Automatically create snapshots and store them off-site",
  "url": "https://github.com/IDmedia/hass-addons/tree/master/hass-backup",
  "startup": "once",
  "boot": "manual",
  "hassio_api": true,
  "hassio_role": "backup",
  "map": ["backup:rw"],
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "options": {
    "host": "",
    "username": "",
    "password": ""
  },
  "schema": {
    "host": "str",
    "username": "str",
    "password": "str"
  }
}
